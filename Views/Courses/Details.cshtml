@model zpnet.Models.Course

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Przedmiot</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
    </dl>
</div>
<div>
    @if(Model.Students.Any())
    {
        <table class="table table-sm">
            <thead>
            <tr>
                <th>Student</th>
                <th>Ocena</th>
            </tr>    
            </thead>
            <tbody>
            @foreach(var s in Model.Students)
            {
                <tr>
                    <td>@s.IN</td>
                    @if(s.Grades != null)
                    {
                        <td>@s.Grades.First().Ocena </td>
                    }
                </tr>    
            }
            </tbody>
        </table>
    }    
</div>
<div>
    <a asp-action="TakeGrades" asp-route-id="@Model?.Id" >Oceny ko≈Ñcowe</a> |
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
